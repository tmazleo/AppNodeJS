    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Nova categoria: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="post">
            <label for="name">Nome</label>
            <input class="form-control" type="text" id="name" name="name" placeholder="Nome da categoria">
            <label for="slug">Slug</label>
            <input class="form-control" type="text" id="slug" name="slug" placeholder="Slug da categoria">
            <button type="submit" class="btn btn-success">Criar</button>
        </form>
    </div>
</div>